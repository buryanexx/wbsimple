# API URL для приложения
VITE_API_URL=https://api.wbsimple.ru/api

# Настройки для Telegram WebApp
VITE_BOT_USERNAME=wbsimple_bot
VITE_TELEGRAM_APP_URL=https://t.me/wbsimple_bot/app

# Принудительно отключаем эмуляцию Telegram в production
VITE_FORCE_TELEGRAM_MODE=false

# Настройки для платежной системы
VITE_PAYMENT_SYSTEM=yookassa
VITE_PAYMENT_SUCCESS_URL=/payment/success
VITE_PAYMENT_FAILURE_URL=/payment/failure

# Настройки сборки
NODE_ENV=production
PORT=3000

# Базовый URL API
NEXT_PUBLIC_API_URL=http://localhost:5005

# URL для Telegram WebApp
NEXT_PUBLIC_WEBAPP_URL=https://wbsimple-buryanexxs-projects.vercel.app

# Токен Telegram бота (используется для проверки данных в WebApp)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Telegram WebApp кэширование (в секундах)
NEXT_PUBLIC_TELEGRAM_CACHE_TTL=3600

# Аналитика (опционально)
NEXT_PUBLIC_ANALYTICS_ID=

# Sentry для отслеживания ошибок (опционально)
NEXT_PUBLIC_SENTRY_DSN= 