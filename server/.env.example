# Общие настройки
NODE_ENV=development
PORT=5005
HOST=0.0.0.0
API_VERSION=v1
DEBUG=wbsimple:*

# База данных
DATABASE_URL="postgresql://wbsimple:wbsimple@localhost:5432/wbsimple?schema=public"

# JWT для аутентификации
JWT_SECRET=your_jwt_secret_key_min_32_chars_here
JWT_EXPIRES_IN=7d

# Настройки Telegram
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_PAYMENT_TOKEN=YOUR_TELEGRAM_PAYMENT_TOKEN

# Веб-приложение
WEBAPP_URL=https://wbsimple-buryanexxs-projects.vercel.app
CORS_ORIGINS=http://localhost:3000,https://wbsimple-buryanexxs-projects.vercel.app

# Redis для кэширования
REDIS_URL=redis://localhost:6379

# Логирование
LOG_LEVEL=info
LOG_FORMAT=text
LOG_DIR=logs

# Хранилище файлов
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10  # Мегабайты

# Настройки приложения
CORS_ORIGIN=*
API_PREFIX=/api
DEFAULT_ADMIN_EMAIL=admin@wbsimple.ru

# Redis
REDIS_TTL=3600

# JWT
JWT_REFRESH_EXPIRES_IN=30d

# Telegram
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/webhook/telegram
TELEGRAM_ADMIN_CHAT_ID=your-admin-chat-id

# Логирование
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Платежная система
PAYMENT_PROVIDER=yookassa
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key
PAYMENT_RETURN_URL=https://wbsimple.ru/payment/success 